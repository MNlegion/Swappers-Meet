<header>
    {{> nav}}
</header>
<section class="mt-3">
    <h2 class="text-center">Add a new product</h2>
    <p class="text-center"></p>
</section>
<section>
    <form class="d-flex flex-column">
        <div class=" form-group has-error">
            <label for="formName">Your Product</label>
            <input type="text" id="formName" class="form-control" name="product-title">
        </div>

        <div class=" form-group">
            <label for="formCat">Product Category</label>
            <input type='text' id="formCat" class="form-control" name="product-category">
        </div>

        <div class=" form-group">
            <input type="radio" id="html" name="product-category" value="HTML">
            <label for="html">HTML</label><br>
            <input type="radio" id="css" name="product-category" value="CSS">
            <label for="css">CSS</label><br>
            <input type="radio" id="javascript" name="product-category" value="JavaScript">
            <label for="javascript">JavaScript</label>
        </div>


        <div class=" form-group">
            <label for="formFile">Image file</label>
            <input type=file id="formFile" class="form-control" name="image">
        </div>


        <form>
            <button type="button" class="btn btn-primary btn-lg" id="button-addProduct">Add Product</button>

        </form>

    </form>


</section>

<script src="/javascript/addProduct.js"></script>