<header>
    {{> nav}}
</header>
<section class="mt-3">
    <h2 class="text-center">Add a new product</h2>
    <p class="text-center">Welcome to your listings! Below you can see all the items you've listed, any bids you've received, and have the option to mark any listings as "closed".</p>
</section>
<section>
        <form class="d-flex flex-column">
          <div class=" form-group has-error">
            <label for="formName">Your Product</label>
            <input type="text" id="formName" class="form-control" name="product-title">
          </div>

          <div class=" form-group">
            <label for="formPassword">Product description</label>
            <input type="text" id="formPassword" class="form-control" name="description">
          </div>

          
          <div class=" form-group">
            <label for="formEmail">Image file</label>
            <input type="email" id="formEmail" class="form-control" name="image">
          </div>
          
        
          <form>
            <button type="button" class="btn btn-primary btn-lg" id="button-addProduct">Add Product</button>
            
          </form>
        
        </form>


</section>

<script src="/javascript/addProduct.js"></script>

