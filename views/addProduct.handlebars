<header>
    {{> nav}}
</header>
<section class="mt-3">
    <h2 class="text-center">Add a new product</h2>
    <p class="text-center"></p>
</section>
<section>
    <form class="d-flex flex-column" >
        <div class=" form-group has-error">
            <label for="formName">Your Product</label>
            <input type="text" id="formName" class="form-control" name="product-title">
        </div>

        <div class=" form-group">
            <p>Choose your Products Category</p>
            <input type="radio" id="Outdoor" name="product-category" value="Outdoor">
            <label for="Outdoor">Outdoor</label><br>
            <input type="radio" id="Furniture" name="product-category" value="Furniture">
            <label for="Furniture">Furniture</label><br>
            <input type="radio" id="Decor" name="product-category" value="Decor">
            <label for="Decor">Decor</label>
        </div>

        <div class=" form-group">
            <label for="formDes">Product Description</label>
            <input type='text' id="formDes" class="form-control" name="description">
        </div>

        <div class=" form-group">
            <label for="formFile">Image file</label>
            <input type=file id="formFile" class="form-control" name="image">
        </div>


        <button type="submit" class="btn btn-primary btn-lg" id="button-addProduct">Add Product</button>



    </form>


</section>

<script src="/javascript/addProduct.js"></script>