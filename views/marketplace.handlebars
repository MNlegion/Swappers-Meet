<header>
    {{> nav}}
</header>
<section class="mt-3">
    <h2 class="text-center">Welcome To The MarketPlace <span id="user-id" data-user="{{user}}">{{username}}</span></h2>
    <p class="text-center">Welcome to the marketplace! Browse all listed items and bid on any you're interested in.</p>
</section>
<section id="bid-listener">
    {{!-- ITERATES THROUGH ALL PRODUCT DATA --}}
    {{#each products as |item| }}
    <article class="card m-2 p-2">
        <h3 class="card-title text-dark">{{item.product_name}}</h3>
        <div class="card-text text-dark p-2 mb-1">
            <p>
                Descripton: {{item.description}}
                <br />
                Category: {{item.category.category_name}}
            </p>
            <button id="send-bid" data-product="{{item.id}}" class="btn btn-primary p-2">Send Bid</button>
        </div>
    </article>
    {{/each}}

    <h1>{{user}}</h1>
</section>

<script src="/javascript/bid.js"></script>